# =============================================================================
# XILLIX REAL ESTATE PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and update the values for your environment
# Never commit .env.local to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/xillix_realestate"
DATABASE_URL_PROD="postgresql://username:password@production-host:5432/xillix_realestate"
REDIS_URL="redis://localhost:6379"
REDIS_URL_PROD="redis://production-host:6379"

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"
SESSION_SECRET="your-session-secret-change-this-in-production"
BCRYPT_ROUNDS=12

# NextAuth Configuration
NEXTAUTH_URL="https://xillix.co.ke"
NEXTAUTH_SECRET="your-nextauth-secret-change-this-in-production"

# =============================================================================
# TWO-FACTOR AUTHENTICATION (2FA)
# =============================================================================
TOTP_SERVICE_NAME="Xillix Real Estate"
TOTP_ISSUER="Xillix"
TOTP_WINDOW=2

# =============================================================================
# SMS SERVICE (TWILIO)
# =============================================================================
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"
TWILIO_VERIFY_SERVICE_SID="your-verify-service-sid"

# =============================================================================
# EMAIL SERVICE
# =============================================================================
# SMTP Configuration (Gmail example)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# SendGrid Alternative
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@xillix.co.ke"
SENDGRID_FROM_NAME="Xillix Real Estate"

# AWS SES Alternative
AWS_SES_REGION="us-east-1"
AWS_SES_ACCESS_KEY_ID="your-ses-access-key"
AWS_SES_SECRET_ACCESS_KEY="your-ses-secret-key"

# =============================================================================
# FILE STORAGE (AWS S3)
# =============================================================================
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="xillix-property-images"
S3_BUCKET_REGION="us-east-1"
CLOUDFRONT_DOMAIN="your-cloudfront-domain.cloudfront.net"

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_PROPERTY=20
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_PLACES_API_KEY="your-google-places-api-key"

# Google AdSense
GOOGLE_ADSENSE_CLIENT_ID="ca-pub-xxxxxxxxxxxxxxxxxx"
GOOGLE_ADSENSE_SLOT_HEADER="1234567890"
GOOGLE_ADSENSE_SLOT_SIDEBAR="0987654321"
GOOGLE_ADSENSE_SLOT_FOOTER="1122334455"

# Google Analytics & Tag Manager
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"

# Google Search Console
GOOGLE_SEARCH_CONSOLE_VERIFICATION="your-verification-code"

# =============================================================================
# DOMAIN & HOSTING CONFIGURATION
# =============================================================================
DOMAIN_URL="https://xillix.co.ke"
NEXT_PUBLIC_API_URL="https://xillix.co.ke/api"
NEXT_PUBLIC_DOMAIN="xillix.co.ke"
NEXT_PUBLIC_APP_URL="https://xillix.co.ke"

# CDN Configuration
CDN_URL="https://cdn.xillix.co.ke"
STATIC_URL="https://static.xillix.co.ke"

# =============================================================================
# SEO CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_NAME="Xillix - Kenya Real Estate Portal"
NEXT_PUBLIC_SITE_DESCRIPTION="Find your dream property in Kenya. Houses, land, commercial properties, warehouses, and rentals. Kenya's premier real estate platform."
NEXT_PUBLIC_DEFAULT_OG_IMAGE="https://xillix.co.ke/images/og-default.jpg"
NEXT_PUBLIC_TWITTER_HANDLE="@XillixKenya"

# Structured Data
ORGANIZATION_NAME="Xillix Real Estate"
ORGANIZATION_URL="https://xillix.co.ke"
ORGANIZATION_LOGO="https://xillix.co.ke/images/logo.png"
ORGANIZATION_PHONE="+254700000000"
ORGANIZATION_EMAIL="info@xillix.co.ke"

# =============================================================================
# MOBILE APP INTEGRATION
# =============================================================================
ANDROID_APP_ID="co.ke.xillix.realestate"
ANDROID_APP_FINGERPRINT="your-app-fingerprint"
DEEP_LINK_SCHEME="xillix"
DEEP_LINK_HOST="xillix.co.ke"

# App Store Links
GOOGLE_PLAY_STORE_URL="https://play.google.com/store/apps/details?id=co.ke.xillix.realestate"
APP_STORE_URL="https://apps.apple.com/app/xillix-real-estate/id123456789"

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
FACEBOOK_PIXEL_ID="123456789012345"
HOTJAR_ID="1234567"
MIXPANEL_TOKEN="your-mixpanel-token"

# Error Tracking
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="xillix"
SENTRY_PROJECT="real-estate-platform"

# =============================================================================
# PAYMENT INTEGRATION (FUTURE)
# =============================================================================
# M-Pesa (Safaricom)
MPESA_CONSUMER_KEY="your-mpesa-consumer-key"
MPESA_CONSUMER_SECRET="your-mpesa-consumer-secret"
MPESA_SHORTCODE="174379"
MPESA_PASSKEY="your-mpesa-passkey"

# Stripe (International)
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# =============================================================================
# ELASTICSEARCH (ADVANCED SEARCH)
# =============================================================================
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME="elastic"
ELASTICSEARCH_PASSWORD="your-elasticsearch-password"
ELASTICSEARCH_INDEX_PREFIX="xillix"

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# CORS Configuration
CORS_ORIGIN="https://xillix.co.ke,https://www.xillix.co.ke"
CORS_CREDENTIALS=true

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# Firebase Cloud Messaging
FCM_SERVER_KEY="your-fcm-server-key"
FCM_SENDER_ID="123456789012"

# Push Notification Settings
PUSH_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
NODE_ENV="development"
DEBUG="xillix:*"
LOG_LEVEL="info"
ENABLE_QUERY_LOGGING=false

# Development Tools
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT=false
ANALYZE_BUNDLE=false

# =============================================================================
# BACKUP & MONITORING
# =============================================================================
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="xillix-backups"

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_PROPERTY_COMPARISON=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_CHAT_SYSTEM=false
FEATURE_VIRTUAL_TOURS=false
FEATURE_PROPERTY_VALUATION=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# WhatsApp Business API
WHATSAPP_BUSINESS_PHONE_ID="your-phone-id"
WHATSAPP_ACCESS_TOKEN="your-access-token"

# Social Media
FACEBOOK_APP_ID="your-facebook-app-id"
TWITTER_API_KEY="your-twitter-api-key"
LINKEDIN_CLIENT_ID="your-linkedin-client-id"

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
NEW_RELIC_LICENSE_KEY="your-new-relic-license-key"
NEW_RELIC_APP_NAME="Xillix Real Estate Platform"

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================
PRIVACY_POLICY_URL="https://xillix.co.ke/privacy"
TERMS_OF_SERVICE_URL="https://xillix.co.ke/terms"
COOKIE_POLICY_URL="https://xillix.co.ke/cookies"

# GDPR Compliance
GDPR_ENABLED=true
COOKIE_CONSENT_REQUIRED=true
DATA_RETENTION_DAYS=2555
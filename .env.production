# =============================================================================
# XILLIX REAL ESTATE PLATFORM - PRODUCTION ENVIRONMENT
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://xillix_user:secure_production_password@localhost:5432/xillix_realestate_prod"
REDIS_URL="redis://localhost:6379"

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_TIMEOUT=30000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET="xillix-super-secure-jwt-secret-key-production-change-this"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"
SESSION_SECRET="xillix-session-secret-production-change-this"
BCRYPT_ROUNDS=12

# NextAuth Configuration
NEXTAUTH_URL="https://xillix.co.ke"
NEXTAUTH_SECRET="xillix-nextauth-secret-production-change-this"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV="production"
PORT=5000
FRONTEND_PORT=3000

# =============================================================================
# DOMAIN & HOSTING CONFIGURATION
# =============================================================================
DOMAIN_URL="https://xillix.co.ke"
NEXT_PUBLIC_API_URL="https://xillix.co.ke/api"
NEXT_PUBLIC_DOMAIN="xillix.co.ke"
NEXT_PUBLIC_APP_URL="https://xillix.co.ke"
FRONTEND_URL="https://xillix.co.ke"

# =============================================================================
# SEO CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_NAME="Xillix - Kenya Real Estate Portal"
NEXT_PUBLIC_SITE_DESCRIPTION="Find your dream property in Kenya. Houses, land, commercial properties, warehouses, and rentals. Kenya's premier real estate platform."
NEXT_PUBLIC_DEFAULT_OG_IMAGE="https://xillix.co.ke/images/og-default.jpg"
NEXT_PUBLIC_TWITTER_HANDLE="@XillixKenya"

# Structured Data
ORGANIZATION_NAME="Xillix Real Estate"
ORGANIZATION_URL="https://xillix.co.ke"
ORGANIZATION_LOGO="https://xillix.co.ke/images/logo.png"
ORGANIZATION_PHONE="+254700000000"
ORGANIZATION_EMAIL="info@xillix.co.ke"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="info@xillix.co.ke"
SMTP_PASS="your-app-password-here"

# =============================================================================
# FILE STORAGE
# =============================================================================
CLOUDINARY_CLOUD_NAME="xillix-realestate"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# =============================================================================
# SECURITY & CORS
# =============================================================================
CORS_ORIGIN="https://xillix.co.ke,https://www.xillix.co.ke"
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400